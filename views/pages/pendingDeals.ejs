<body >
    <nav class="sidebar close">
    <header>
        <div class="image-text">
            <span class="image">
                <a href="/home"><img src="/public/images/logo.png" alt="logo"></a>
            </span>
            <div class="text logo-text">
                <span class="name"><%= client.name %></span>
                <span class="profession"><%= client.profession %></span>
            </div>
        </div>
        <i class='bx bx-chevron-right toggle'></i>
    </header>
    <div class="menu-bar">
        <div class="menu">
            <ul class="menu-links">
                <li class="nav-link">
                    <a href="/client/updateProfile">
                        <i class='bx bx-home-alt icon' ></i>
                        <span class="text nav-text">Update Profile</span>
                    </a>
                </li>

                <li class="nav-link">
                    <a href="/client/approvedDeals">
                        <i class='bx bx-bar-chart-alt-2 icon' ></i>
                        <span class="text nav-text">Approved Deals</span>
                    </a>
                </li>

                <li class="nav-link">
                    <a href="/client/pendingDeals">
                        <i class='bx bx-bell icon'></i>
                        <span class="text nav-text">Pending Deals</span>
                    </a>
                </li>

                <li class="nav-link">
                    <a href="/client/changePassword">
                        <i class='bx bx-heart icon' ></i>
                        <span class="text nav-text">Change Password</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="bottom-content">
            <li class="">
                <a href="/client/logout">
                    <i class='bx bx-log-out icon' ></i>
                    <span class="text nav-text">log out</span>
                </a>
            </li>
        </div>
    </div>
</nav>
<section class="side" style="background-color:white;width:800px;">
    <div class="details">
        <h1 sytle="font-family:'Times New Roman';">PENDING DEALS</h1><br>
        <form action="/client/pendingDeals" method="post">
            <input type="text" placeholder="Search by Email / Name" name="query" value="<%=query %>" id="search">
            <button type="submit" id="Delete" value="search">Search</button>
        </form>
        
        <% userInfo.forEach((user)=>{ %>
        <div class="box">
            <img src="/public/images/BoyProfile.jpeg">
            <div class="matter">
                <form action="/client/acceptRequest" method="post">
                    <br>
                    <input type="hidden" name="client_id" value="<%= client._id %>">
                    <input type="hidden" name="user_id" value="<%= user._id %>">
                    <label for="name">Name</label>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span>: <%= user.name %></span><br>
                    <label for="email">Email</label>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span>: <%= user.email %></span><br>
                    <label for="mobile">Mobile</label>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span>: <%= user.mobile %></span><br>
                    &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; 
                    &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                    <input type="submit" id="Delete" value="Accept">
                </form>
            </div>
        </div><br><br> 
        <% }) %>
        </h1>
</section>
