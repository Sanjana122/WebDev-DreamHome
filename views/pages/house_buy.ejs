                        <input type="checkbox" id="type-3" name="no_rooms" value=3>
                        <label for="Property-type"> 3BHK</label><br>
                    </div> 
                </div>
            </div>
            <br>
            <div class="item">
                <button class="sub-btn" type="button">Balcony<i class="fa fa-caret-down"></i></button>
                <div class="sub-menu">
                    <div>
                        <input type="checkbox" id="type-1" name="balcony" value=1>
                        <label for="Property-type">1</label><br>
                    </div>
                    <div>
                        <input type="checkbox" id="type-2" name="balcony" value=2>
                        <label for="Property-type">2</label><br>
                    </div>
                    <div>
                        <input type="checkbox" id="type-3" name="balcony" value=3>
                        <label for="Property-type"> 3</label><br>
                    </div> 
                </div>
            </div>
            <br>
            <div class="item">
                <button class="sub-btn" type="button">Construction Status<i class="fa fa-caret-down"></i></button>
                <div class="sub-menu">
                    <div>
